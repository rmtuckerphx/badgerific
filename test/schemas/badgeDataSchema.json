{
    "$id": "BadgeDataSchema",
    "description": "Schema for BadgeData",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "props": {
            "$ref": "#/definitions/Props"
        },
        "systemProps": {
            "$ref": "#/definitions/Props"
        },
        "periods": {
            "type": "object"
        },
        "earned": {
            "type": "array",
            "items": [
                {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "string"
                        },
                        "lastEarned": {
                            "type": "string"
                        },
                        "count": {
                            "type": "integer"
                        }
                    },
                    "required": [
                        "id",
                        "lastEarned",
                        "count"
                    ]
                }
            ]
        }
    },
    "required": [
        "systemProps",
        "props",
        "earned",
        "periods"
    ],
    "definitions": {
        "Props": {
            "patternProperties": {
                "^.*$": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        },
                        {
                            "type": "boolean"
                        }
                    ]
                }
            },
            "additionalProperties": false
        }
    }
}